{
  "name": "website",
  "version": "1.0.0",
  "description": "Personal website",
  "author": "Paolo Sacconier",
  "license": "MIT",
  "scripts": {
    "lint:html": "htmlhint '**/*.html'",
    "lint:css": "stylelint '**/*.css'",
    "lint:js": "standard '**/*.js'",
    "format:html": "prettier --write '**/*.html'",
    "format:css": "prettier --write '**/*.css'",
    "format:js": "standard --fix '**/*.js'",
    "format": "npm run format:html && npm run format:css && npm run format:js",
    "lint": "npm run format && npm run lint:html && npm run lint:css && npm run lint:js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "htmlhint": "^1.1.4",
    "husky": "^9.0.11",
    "husky-init": "^8.0.0",
    "prettier": "^3.2.5",
    "standard": "^17.1.0",
    "stylelint": "^16.4.0",
    "stylelint-prettier": "^5.0.0"
  }
}
